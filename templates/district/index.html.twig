{% extends 'base.html.twig' %}

{% block title %}Liste des Districts{% endblock %}

{% block body %}
    <h1>Liste des Districts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>District</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td>{{ district.district }}</td>
                <td>
                    <a href="{{ path('district_show', {'id': district.id}) }}">voir</a>
                    <a href="{{ path('district_edit', {'id': district.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(districts) }}
    </div>

    <a href="{{ path('district_new') }}">Ajouter</a>
{% endblock %}
