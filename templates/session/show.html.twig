{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ session.date ? session.date|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('session_index') }}">Retour</a>

    <a href="{{ path('session_edit', {'id': session.id}) }}">Modifier</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
