{% extends 'base.html.twig' %}

{% block title %}Bureau index{% endblock %}

{% block body %}
    <h1>Bureau index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bureau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bureau in bureaus %}
            <tr>
                <td>{{ bureau.id }}</td>
                <td>{{ bureau.bureau }}</td>
                <td>
                    <a href="{{ path('bureau_show', {'id': bureau.id}) }}">show</a>
                    <a href="{{ path('bureau_edit', {'id': bureau.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bureau_new') }}">Create new</a>
{% endblock %}
