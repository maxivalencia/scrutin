{% extends 'base.html.twig' %}

{% block title %}Liste des codes{% endblock %}

{% block body %}
    <h1>Liste des codes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code in codes %}
            <tr>
                <td>{{ code.id }}</td>
                <td>{{ code.code }}</td>
                <td>
                    <a href="{{ path('code_show', {'id': code.id}) }}">voir</a>
                    <a href="{{ path('code_edit', {'id': code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(codes) }}
    </div>

    <a href="{{ path('code_new') }}">Ajouter</a>
{% endblock %}
