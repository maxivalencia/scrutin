<form method="post" action="{{ path('population_delete', {'id': population.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette densité de population?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ population.id) }}">
    <button class="btn">Supprimer</button>
</form>
