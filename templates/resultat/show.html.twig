{% extends 'base.html.twig' %}

{% block title %}Résultat{% endblock %}

{% block body %}
    <h1>Résultat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resultat.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ resultat.nombre }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ resultat.CreatedAt ? resultat.CreatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('resultat_index') }}">Retour</a>

    <a href="{{ path('resultat_edit', {'id': resultat.id}) }}">Modifier</a>

    {{ include('resultat/_delete_form.html.twig') }}
{% endblock %}
